#RUN npm install -g cnpm --registry=https://registry.npm.taobao.org
RUN npm install -g cnpm --registry=https://registry.npm.taobao.org

RUN cnpm install --production
RUN cnpm install --global nodemon
RUN cnpm install --global pm2
RUN cnpm install --global typescript

# Bundle app source
COPY . /usr/app

CMD [ "npm","start" ]
